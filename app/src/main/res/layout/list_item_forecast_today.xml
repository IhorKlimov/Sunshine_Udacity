<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sunshine_blue"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="64dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/item_forecast_textview_date"
            style="@style/Text22Condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/item_forecast_textview_high"
            style="@style/Text72Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/item_forecast_textview_low"
            style="@style/Text36Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
           />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/item_forecast_textview_details"
            style="@style/Text22Condensed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>