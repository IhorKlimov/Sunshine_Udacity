<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_list_background"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/primary"
        android:id="@+id/widget_header"
        android:paddingBottom="@dimen/forecast_temperature_space"
        android:paddingEnd="@dimen/forecast_temperature_space"
        android:paddingLeft="@dimen/forecast_temperature_space"
        android:paddingRight="@dimen/forecast_temperature_space"
        android:paddingStart="@dimen/forecast_temperature_space"
        android:paddingTop="@dimen/forecast_temperature_space"
        android:src="@drawable/ic_logo" />

    <ListView
        android:id="@+id/widget_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>